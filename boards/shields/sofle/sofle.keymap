/*
 * Sofle Choc Wireless Modern2.0 — MATRIX TESTER (Windows FR/AZERTY)
 * Goal: print a unique character per physical key to discover the exact matrix order.
 *
 * How to use:
 * 1) Flash this keymap (left + right).
 * 2) Open Notepad and press keys from top-left to top-right (Row 1), then Row 2, Row 3, Row 4,
 *    then the 5 left thumb keys, then the 5 right thumb keys.
 * 3) Send me the sequence you see (e.g., "ABCDEFGHIJKL..."), and I’ll align the final FR layout exactly.
 */

#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "Base";
            bindings = <
                // Row 1 (Left 6)                               // Row 1 (Right 6)
                &kp A  &kp B  &kp C  &kp D  &kp E  &kp F         &kp G  &kp H  &kp I  &kp J  &kp K  &kp L
                // Row 2
                &kp M  &kp N  &kp O  &kp P  &kp Q  &kp R         &kp S  &kp T  &kp U  &kp V  &kp W  &kp X
                // Row 3
                &kp Y  &kp Z  &kp A  &kp B  &kp C  &kp D         &kp E  &kp F  &kp G  &kp H  &kp I  &kp J
                // Row 4 (INCLUDES ENCODER PRESSES in the middle two slots)
                &kp K  &kp L  &kp M  &kp N  &kp O  &kp P         &kp Q  &kp R  &kp S  &kp T  &kp U  &kp V
                // Thumbs (5 left, 5 right) — print digits
                &kp N1 &kp N2 &kp N3 &kp N4 &kp N5               &kp N6 &kp N7 &kp N8 &kp N9 &kp N0
            >;
        };
    };
};

/* Encoders rotation: no-op for the tester (optional) */
